<!DOCTYPE html>
<html data-ng-app="PixiApp" data-ng-controller="ApplicationController">
<head>
    <meta charset="UTF-8"/>
    <title>
        {% block title %}
            {% raw %}
            {{ applicationTitle }}
            {% endraw %}
        {% endblock %}
    </title>
    {% stylesheets
    'bundles/pixicore/lib/bootstrap/dist/css/bootstrap.min.css'
    'bundles/pixicore/lib/fontawesome/css/font-awesome.min.css'
    filter='cssrewrite' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}">
    {% endstylesheets %}
    {% block stylesheets %}
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body>
{% block body %}{% endblock %}

{% javascripts
'bundles/pixicore/lib/jquery/dist/jquery.min.js'
'bundles/pixicore/lib/angular/angular.min.js'
'bundles/pixicore/js/site/app.js' %}
<script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% block bundlejs %}{% endblock %}
</body>
</html>
