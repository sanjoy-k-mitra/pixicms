{% extends 'PixiCoreBundle:Site:index.html.twig' %}

{% block body %}
{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<form method="post" action="{{ path('login_check') }}">
    <div class="form-group">
        <input class="form-control" type="text" name="_username" value="{{ last_username }}">
    </div>
    <div class="form-group">
        <input class="form-control" type="password" name="_password">
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
</form>
{% endblock %}